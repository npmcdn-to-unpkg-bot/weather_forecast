<div class="container" ng-controller="forecastController" id="forecast-content">
  <div class="forecast-search">
    <div id="search-box">
      <div class="row">
        <div class="col-xs-12">
          <input class="typeahead" type="text" placeholder="Postal Code or City/State">
        </div>
      </div>
    </div>
  </div>
  <div class="forecast-data" id="data-div" ng-if="data.data.length > 0">
    <div class="row">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-12" ng-show="data.data.length > 0">
            <div class="page-header">
              <h1>Weather forecast from {{data.data[0].time * 1000 | date: 'd MMMM'}} to {{data.data[1].time * 1000 | date: 'd MMMM'}}</h1>
              <h1><small>{{data.summary}}</small></h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4" ng-repeat="dayData in data.data">
            <div ng-class="{'panel panel-success' : $first, 'panel panel-primary' : !$first}">
              <div class="panel-heading">
                <h3 class="panel-title">{{dayData.time * 1000 | date: 'fullDate'}}</h3>
              </div>
              <div class="panel-body">
                <p>{{dayData.summary}}</p>
                <p><strong>Min:</strong> {{dayData.temperatureMin | number : 0}} °C</p>
                <p><strong>Max:</strong> {{dayData.temperatureMax | number : 0}} °C</p>
              </div>
              <div class="panel-footer">
                <small><strong>Wind:</strong> {{dayData.windSpeed}} mps <strong> - Humidity:</strong> {{dayData.humidity * 100}} % - <strong>Pressure:</strong> {{dayData.pressure}} hPa</small>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>
